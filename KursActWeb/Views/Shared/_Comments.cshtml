@model IEnumerable<KursActWeb.ViewModels.CommentViewModel>

@if (Model.Count() > 0)
{
    <div class="pl-5 pr-5">
        @foreach (var item in Model.Reverse())
        {
            <div class="comment--item comment--left">
                <div class="comment--avatar avatar-circle">
                    <img src="http://aiiscue.kursufa.ru/account/GetAvatar?hash=@item.Author.GetHashCode()&size=80&key=2ec8466f0e50235fbb97306dbec850302dfaa6ae" alt="" class="rounded-circle border border-danger">
                </div>

                <div class="comment--content shadow">
                    <div class="comment--info d-flex flex-row">
                        <h6 class="comment--user h6">
                            <a href="#">@item.Author</a>
                        </h6>
                        <span class="ml-4 text-black-50">@item.Date.ToShortDateString()</span>
                        <i class="fas fa-trash comment-delete align-self-center ml-auto" title="Удалить комментарий" onclick="DeleteComment(@item.Id)"></i>
                    </div>
                    <div class="comment--text text-black-50">
                        <p>@item.Text</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-column">
            <i class="far fa-comment-dots align-self-center fa-3x"></i>
            <p class="mt-2 mb-2 align-self-center">Нет комментариев</p>
        </div>
    </div>
}